{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "node16",
		"outDir": "app/inpage/js/",
		"rootDir": "app/inpage/ts/",
		"noEmit": false,
		"sourceMap": false,
		"inlineSources": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"declaration": false,
		"declarationMap": false,
		"lib": ["ES2022", "DOM"],
		"typeRoots": ["./node_modules/@types"],
	},
	"include": ["app/inpage/ts/*.mts"]
}
